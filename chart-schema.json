{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "name": "Chart",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string",
      "description": "Chart title"
    },
    "axis": {
      "type": "array",
      "description": "List of chart axes",
      "additionalProperties": false,
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string",
            "description": "Axis label"
          },
          "type": {
            "type": "string",
            "description": "Location of the axis",
            "enum": ["top", "bottom", "left", "right"]
          },
          "unit": {
            "type": "string",
            "description": "Unit represented on this axis"
          },
          "min": {
            "type": "number",
            "description": "Minimum value for this axis"
          },
          "max": {
            "type": "number",
            "description": "Maximum value for this axis"
          },
          "flip": {
            "type": "boolean",
            "description": "Are the axis values in reverse order?"
          }
        }
      }
    },
    "data": {
      "type": "array",
      "description": "Chart serie(s)",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "label": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "description": "Type of the serie",
            "enum": ["line", "scatter", "bar"]
          },
          "x": {
            "type": "array",
            "description": "X values",
            "items": {
              "type": "number"
            }
          },
          "y": {
            "type": "array",
            "description": "Y values",
            "items": {
              "type": "number"
            }
          },
          "z": {
            "type": "array",
            "description": "Z values",
            "items": {
              "type": "number"
            }
          },
          "errorX": {
            "type": "array",
            "description": "Errors in x",
            "items": {
              "oneOf": [{
                "type": "number",
                "description": "Symmetrical X error bars"
              }, {
                "type": "array",
                "items": {
                  "oneOf": [{
                    "type": "number",
                    "description": "Asymmetrical X error bars : [left, right]"
                  }, {
                    "type": "array",
                    "items": {
                      "type": "number",
                      "description": "Asymmetrical X error bars, many zones [[left1,right1],[left2,right2],...]"
                    }
                  }]
                }
              }]
            }
          },
          "errorY": {
            "type": "array",
            "description": "Errors in y",
            "items": {
              "oneOf": [{
                "type": "number",
                "description": "Symmetrical Y error bars"
              }, {
                "type": "array",
                "items": {
                  "oneOf": [{
                    "type": "number",
                    "description": "Asymmetrical Y error bars : [top, bottom]"
                  }, {
                    "type": "array",
                    "items": {
                      "type": "number",
                      "description": "Asymmetrical Y error bars, many zones [[top1,bottom1],[top2,tottom2],...]"
                    }
                  }]
                }
              }]
            }
          },
          "info": {
            "type": "array",
            "description": "Additional information about the data points"
          },
          "xAxis": {
            "type": "number",
            "description": "Index of the x axis in the axis array"
          },
          "yAxis": {
            "type": "number",
            "description": "Index of the y axis in the axis array"
          },
          "zAxis": {
            "type": "number",
            "description": "Index of the z axis in the axis array"
          },
          "style": {
            "type": "array",
            "description": "Styling of each point of the serie",
            "items": {
              "type": "object",
              "description": "An sub-element of style",
              "items": {
                "shape": {
                  "type": "string",
                  "description": "Shape of the point (square, round, cross, ...)"
                },
                "zoom": {
                  "type": "number",
                  "description": "Defines the size of the point"
                },
                "lineWidth": {
                  "type": "number",
                  "description": "Width of the line defining the shape"
                },
                "lineColor": {
                  "type": "string",
                  "description": "Color of the line defining the shape"
                },
                "fillColor": {
                  "type": "string",
                  "description": "Color of the shape"
                },
                "points": {
                  "description": "Points for which this style is valid"
                }
              }
            }
          },
          "lineStyle": {
            "type": "array",
            "description": "Styling of the line between the points of the serie. Available only for the line serie",
            "items": {
              "type": "object",
              "items": {
                "styleName": {
                  "type": "string",
                  "description": "The name of the style"
                },
                "color": {
                  "type": "string",
                  "description": "The color of the line, the scatter points, or the bar"
                },
                "lineWidth": {
                  "type": "number",
                  "description": "If the serie is a line, its width. Otherwise, ignored"
                },
                "lineStyle": {
                  "description": "Some parameter describing further styling of the line"
                }
              }
            }
          }
        }
      }
    }
  }
}